<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom ="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/row_rounded_background_white">

    <LinearLayout
        android:id="@+id/linStartView"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@drawable/row_side_rounded_background_blue"
        android:orientation="vertical"
        android:padding="5dp"
        />

    <LinearLayout
        android:id="@+id/linSection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linStartView"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="5dp">


            <com.prometteur.saloonuser.Utils.TextViewCustomFont
                android:id="@+id/tvComboNameTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="-1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <com.prometteur.saloonuser.Utils.TextViewCustomFont
                android:id="@+id/tvServiceOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.6"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:text=""
                android:textColor="@color/grey"/>
            <com.prometteur.saloonuser.Utils.TextViewCustomFont
                android:id="@+id/tvServiceTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.6"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="12dp"
                android:text=""
                android:textColor="@color/grey"/>
        </LinearLayout>

        <com.prometteur.saloonuser.Utils.TextViewCustomFont
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginRight="@dimen/_2sdp"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_margin="@dimen/_5sdp"
                android:padding="2dp"
                android:gravity="center_vertical"
                >
                <com.prometteur.saloonuser.Utils.TextViewCustomFont
                    android:id="@+id/tvOfferPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <com.prometteur.saloonuser.Utils.TextViewCustomFont
                    android:id="@+id/tvOriginalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/grey"
                    android:textSize="14dp" />
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>
        <com.prometteur.saloonuser.Utils.TextViewCustomFont
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginRight="@dimen/_2sdp"
            />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linSection1"
        android:gravity="center_vertical"
        >
        <com.prometteur.saloonuser.Utils.TextViewCustomFont
            android:id="@+id/tvOperator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="+ Select Operator"
            android:textColor="@color/skyBlueDark"
            android:textSize="12dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />

        <com.prometteur.saloonuser.Utils.TextViewCustomFont
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="@color/black"
            android:background="@color/grey"
            android:layout_marginRight="@dimen/_2sdp"
            />
        <com.prometteur.saloonuser.Utils.TextViewCustomFont
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="+ Add to Cart"
            android:textColor="@color/skyBlueDark"
            android:textSize="14dp"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />

    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
