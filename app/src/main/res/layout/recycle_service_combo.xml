<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <View
        android:id="@+id/viewbg1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="horizontal"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/linStartView"
            android:layout_weight="0.26"
            android:orientation="vertical"
            android:padding="5dp">


            <com.prometteur.saloonuser.Utils.TextViewCustomFont
                android:id="@+id/tvServiceName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="-1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <com.prometteur.saloonuser.Utils.TextViewCustomFont
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Brand :"
                android:textColor="@color/grey"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.prometteur.saloonuser.Utils.TextViewCustomFont
                    android:id="@+id/tvAddRemoveOperator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:layout_weight="1"
                    />

            </LinearLayout>



        </LinearLayout>

        <com.prometteur.saloonuser.Utils.TextViewCustomFont
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.66"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/row_rounded_background_bluish"
                android:layout_margin="@dimen/_5sdp"
                android:padding="2dp"
android:gravity="center"
                >
                <com.prometteur.saloonuser.Utils.TextViewCustomFont
                    android:id="@+id/tvOfferPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                   />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</LinearLayout>