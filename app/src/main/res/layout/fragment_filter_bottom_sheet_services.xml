<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.FragmentFilterBottomSheet">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.prometteur.saloonuser.Utils.TextViewCustomFont
        android:id="@+id/tvFilterBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="@string/sort_filter_by"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivCrossGrey"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:src="@drawable/ic_cross_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFilterBy" />
<androidx.core.widget.NestedScrollView
    android:id="@+id/linAllSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <com.prometteur.saloonuser.Utils.TextViewCustomFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Sort by : "
        android:textColor="@color/black"
        android:textSize="15sp"
        />
<com.prometteur.saloonuser.Utils.CheckBoxCustomFont
    android:id="@+id/cbCostLowToHigh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Cost Low to High"
        android:textSize="12dp"
        android:button="@null"
        android:textColor="@color/darkGray"
        /><com.prometteur.saloonuser.Utils.CheckBoxCustomFont
    android:id="@+id/cbCostHighToLow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Cost High to Low"
        android:textSize="12dp"
        android:button="@null"
        android:textColor="@color/darkGray"
        />


<com.prometteur.saloonuser.Utils.CheckBoxCustomFont
    android:id="@+id/cbCatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="List of Categories"
        android:textColor="@color/black"
        android:textSize="15sp"
    android:button="@null"
    android:drawableEnd="@drawable/ic_keyboard_arrow_up_black_24dp"
        />
    <LinearLayout
        android:id="@+id/linCatSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <com.prometteur.saloonuser.Utils.CheckBoxCustomFont
        android:id="@+id/cbHair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Hair"
        android:textSize="12dp"
        android:button="@null"
        android:textColor="@color/darkGray"
        />
    <com.prometteur.saloonuser.Utils.CheckBoxCustomFont
        android:id="@+id/cbSkin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Skin"
        android:textSize="12dp"
        android:button="@null"
        android:textColor="@color/darkGray"
        /> <com.prometteur.saloonuser.Utils.CheckBoxCustomFont
        android:id="@+id/cbNails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Nails"
        android:textSize="12dp"
        android:button="@null"
        android:textColor="@color/darkGray"
        />
        <com.prometteur.saloonuser.Utils.CheckBoxCustomFont
            android:id="@+id/cbSpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:padding="@dimen/_3sdp"
            android:text="Spa"
            android:textSize="12dp"
            android:button="@null"
            android:textColor="@color/darkGray"
            />
        <com.prometteur.saloonuser.Utils.CheckBoxCustomFont
        android:id="@+id/cbMakeup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="Makeup"
        android:textSize="12dp"
        android:button="@null"
        android:textColor="@color/darkGray"
        />


</LinearLayout>

    <com.prometteur.saloonuser.Utils.CheckBoxCustomFont
        android:id="@+id/cbBrandList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:padding="@dimen/_3sdp"
        android:text="List of Brands"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:button="@null"
        android:drawableEnd="@drawable/ic_keyboard_arrow_up_black_24dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_ShowProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_8sdp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.prometteur.saloonuser.Utils.ButtonCustomFont
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_blue_small"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="10dp"
            android:text="Reset"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <com.prometteur.saloonuser.Utils.ButtonCustomFont
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_bg_blue_small"
            android:drawablePadding="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginBottom="10dp"
            android:text="@string/filter"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>



</LinearLayout>